&pro_micro_i2c {
    status = "okay";

    ssd1306@3c {
        compatible = "solomon,ssd1306fb";
        reg = <0x3C>;
        width = <64>;
        height = <128>;

        /* Try flipping if needed */
        rotation = <0>;
        segment-remap;
        com-invdir;

        multiplex-ratio = <127>;  /* 128-1 for 128px height */
        display-offset = <0>;
        prechargep = <0x22>;
        status = "okay";
    };
};
